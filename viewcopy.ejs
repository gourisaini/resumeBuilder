<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/view.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="stylesheet"  href="https://kendo.cdn.telerik.com/2017.1.223/styles/kendo.common.min.css"/>
</head>

<body>
    
    <page size="A4" class="resume">
        <div id="image">
            <section>
                <h1>
                    <%=user.name%>
                </h1>
                <hr style="color: black;">
                <hr style="color: black;">
                <p>
                    <i class="ri-map-pin-line"></i>
                    <%=user.address%><br>
                        <i class="ri-phone-line"></i>
                        <%=user.phone%><br>
                            <i class="ri-mail-line"></i>
                            <%=user.email%><br>
                                <i class="ri-linkedin-fill"></i>
                                <%=user.linkedin%><br>
                                    <i class="ri-github-fill"></i>
                                    <%=user.github%>
                </p>
            </section>
            <%if(user.avatar !=="dummy.png" ){%>
                <div id="resume_profile">
                    <img src="/images/<%= user.avatar%>" alt="">
                </div>
                <%}%>
        </div>

        <%if(user.objective !=="" ){%>
            <section>
                <h2>objective</h2>
                <hr style="color: black;">
                <hr style="color: black;">
                <p style="text-align: left;">
                    <%=user.objective%>
                </p>
            </section>
            <%}%>

                <section>
                    <h2>skills & abilities</h2>
                    <hr style="color: black;">
                    <hr style="color: black;">
                    <ul>
                        <% user.skill.forEach((e, i)=> { %>
                            <li><%=e.skills%></li>
                            <% })%>
                    </ul>
                </section>

                <section>
                    <h2>education</h2>
                    <hr style="color: black;">
                    <hr style="color: black;">
                    <table>
                        <tr>
                            <th style="width: 40%;">degree</th>
                            <th style="width: 40%;">College/school</th>
                            <th style="width: 20%;">Completion</th>
                        </tr>
                        <% user.education.forEach((e, i)=> { %>
                        <tr>
                            <td><%=e.degree%></td>
                            <td><%=e.college%></td>
                            <td><%=e.year%></td>
                        </tr>
                        <% })%>
                    </table>
                </section>


    </page>

    <page size="A4" class="resume">
        <%if(user.experience !=" " ){%>
            <section>
                <h2>Work Experience</h2>
                <hr style="color: black;">
                <hr style="color: black;">
                <% user.experience.forEach((e, i)=> { %>

                    <h5 id="title">
                        <%=e.position%>- <span>
                                <%=e.duration%>
                            </span>
                    </h5>
                    <p style="text-align: left; margin-top: 0;">
                        <%=e.description%>
                    </p>
                    <% })%>

            </section>
            <%}%>

                <%if(user.project !=" " ){%>
                    <section>
                        <h2>Project</h2>
                        <hr style="color: black;">
                        <hr style="color: black;">
                        <% user.project.forEach((e, i)=> { %>

                            <h5 id="title">
                                <%=e.title%>- <span>
                                        <%=e.technology%>
                                    </span>
                            </h5>
                            <p style="text-align: left; margin-top: 0;">
                                <%=e.description%>
                            </p>
                            <% })%>
                    </section>
                    <%}%>

                        <section>
                            <h2>Personal details</h2>
                            <hr style="color: black;">
                            <hr style="color: black;">
                            <table>
                                <%if(user.dob !==" " ){%>
                                    <tr>
                                        <td style="border-color: white;">Date of Birth</td>
                                        <td style="border-color: white;">:</td>
                                        <td style="border-color: white;">
                                            <%=user.dob%>
                                        </td>
                                    </tr>
                                    <%}%>
                                <%if(user.lang !==" " ){%>
                                     <tr>
                                        <td style="border-color: white;">Languages</td>
                                        <td style="border-color: white;">:</td>
                                        <td style="border-color: white;">
                                            <%=user.lang%>
                                        </td>
                                    </tr>
                                <%}%>
                                <%if(user.hobby !==" " ){%>
                                                    <tr>
                                                        <td style="border-color: white;">Hobbies</td>
                                                        <td style="border-color: white;">:</td>
                                                        <td style="border-color: white;">
                                                            <%=user.hobby%>
                                                        </td>
                                                    </tr>
                                                    <%}%>

                            </table>
                        </section>

                     
    <%if(user.declare !== ""){%>
        <section>
          <h2>declaration</h2>
          <hr style="color: black;">
          <hr style="color: black;">
          <p><%=user.declare%></p>
      </section>
        <%}%>
  

                        <section style="margin-top: 8vmax;">
                            <h5><%=user.name%></h5>
                            <hr style="color: black;">
                            <hr style="color: black;">
                        </section>
    </page>
    <nav id="resume-nav">
        <h4><a href="/profile">Back</a></h4>
        <!-- <h4><a href="" class="printbtn">Download</a></h4> -->
        <button class="printbtn mt-5 btn btn-success">Print</button>

    </nav>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    
    
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="https://kendo.cdn.telerik.com/2017.1.223/js/jszip.min.js"></script>
<script src="https://kendo.cdn.telerik.com/2017.1.223/js/kendo.all.min.js"></script>

<script>
    function getPDF(selector) {
        kendo.drawing.drawDOM($(selector)).then(function (group) {
            kendo.drawing.pdf.saveAs(group, "testing.pdf");
        });
    }
</script>
<script type="text/javascript">
    $(".printbtn").click(function () {
        getPDF(".resume");
    });
</script>
</body>
</html>