<%- include("./partials/header")%>
<main class="w-100">
  <h1 class="fs-1 fw-bold m-auto container pt-4" style="color: #f78542; font-family: Roboto;">Update User</h1>
  <div id="img " class="container w-75 d-flex justify-content-between" style="border-bottom: 1px solid #f78542;">
    <div class="container w-50 d-flex py-5 mx-5 justify-content-space " style="justify-content: flex-end;">

  <div class="me-5  text-center">
    <img
        style="object-fit: cover"
        class="rounded-circle profilePic"
        height="100"
        width="100"
        src="/images/<%= user.avatar%>"
        alt=""
    />
    <form action="/upload" method="post" enctype="multipart/form-data">
        <input class="d-none uploadImg" name="avatar" type="file" />
        <button class="mt-3 btn btn-secondary" style="background-color: #f78542;">Upload Image</button>
    </form>
</div>
  <div>
    <h1 class="fs-1 fw-light" style="color: black;"><%=user.name%></h1>
    <h3 class="fs-4 fw-light" style="color: black;"><%=user.email%></h3>
    <p>
        <small class="text-muted">
            <a
                class="text-decoration-none text-dark fs-3"
                href="<%= user.linkedin%>" style="color: #38686a;"
                ><i class="ri-linkedin-box-fill"></i
            ></a>

            <a
                class="text-decoration-none text-dark fs-3 ms-3"
                href="<%= user.github%>" style="color: #38686a;"
                ><i class="ri-github-fill"></i
            ></a>
        </small>
    </p>
</div>
</div>
<div class="w-50" style="text-align: right;">
  <button type="button" class="btn btn-dark mx-1"><a href="/signout" style="color: white;">Sign-Out</a></button>
  <button type="button" class="btn btn-dark"><a href="/reset-password" style="color: white;">Reset-Password</a></button>
</div>
  </div>
  <hr class="w-75 m-auto mb-3"  style="color: #f78542;">
  <div>
    <form action="/update/<%= user._id%>" method="post">
  <div class="container w-100 d-flex">
  <div class="left w-50">
      <h4 class="fw-lighter w-75 m-auto mb-3 mt-4" style="text-align: left;">Basic Details</h4>
      <hr class="w-75 m-auto mb-3" style="color: #f78542;"> 
      <input class="form-control m-auto mb-4 w-75 p-2" type="text" placeholder="Fullname" name="name" value="<%=user.name%>">
      <input class="form-control m-auto mb-4 w-75 p-2" type="text" placeholder="Fullname" name="username" value="<%=user.username%>">
      <input class="form-control m-auto mb-4 w-75 p-2" type="email" placeholder="Email" name="email" value="<%=user.email%>">
      <input class="form-control m-auto mb-4 w-75 p-2" type="text" placeholder="Address" name="address" value="<%=user.address%>">
      <input class="form-control m-auto mb-4 w-75 p-2" type="number" placeholder="Mobile No." name="phone" value="<%=user.phone%>">


      
      <h4 class="fw-lighter w-75 m-auto mb-3 mt-5" style="text-align: left;">Personal Details</h4>
      <hr class="w-75 m-auto mb-3" style="color: #f78542;"> 
  
      <input class="form-control m-auto mb-4 w-75 p-2" type="date" name="dob" placeholder="Date of Birth" value="<%=user.dob%>">
      <input class="form-control m-auto mb-4 w-75 p-2" type="text" name="lang" placeholder="Languages" value="<%=user.lang%>">
      <input class="form-control m-auto mb-4 w-75 p-2" type="text" name="hobby" placeholder="Hobbies" value="<%=user.hobby%>">
  </div>
  <div class="right w-50 " style="border-left: 0.5px solid #f78542;">

      <h4 class="fw-lighter w-75 m-auto mb-3 mt-4" style="text-align: left;">Links</h4>
      <hr class="w-75 m-auto mb-3" style="color: #f78542;"> 
      <input class="form-control m-auto mb-4 w-75 p-2" type="text" name="linkedin" placeholder="LinkedIn" value="<%=user.linkedin%>">
      <input class="form-control m-auto mb-4 w-75 p-2" type="text" placeholder="Github" name="github" value="<%=user.github%>">
  
        <h4 class="fw-lighter w-75 m-auto mb-3 mt-4" style="text-align: left;">Objective</h4>
        <hr class="w-75 m-auto mb-3" style="color: #f78542;"> 
        <textarea class="form-control m-auto mb-4 w-75 p-2" name="objective" rows="5" placeholder="Objective"><%=user.objective%></textarea>
    
  
     <h4 class="fw-lighter w-75 m-auto mb-3 mt-5" style="text-align: left;">Declaration</h4>
     <hr class="w-75 m-auto mb-3" style="color: #f78542;"> 
  
     <textarea class="form-control m-auto mb-4 w-75 p-2" name="declare" rows="3" placeholder="Declaration"><%=user.declare%></textarea>
  </div>
  </div>
  <p class="w-100 text-center"><button class="btn btn-secondary w-25 mb-4 p-2 m-auto mt-5" style="background-color: #f78542;">Update</button></p>
        
    </form>
  </div>


</main>

<style>
  button:hover{
box-shadow: 0 0 0 2px white, 0 0 0 3px #f78542;
}
</style>
