<%- include("./partials/header")%>
<div style="width: 100%; height: 87vh; position: absolute; z-index: -1; background:url(/images/one.jpg); background-size: cover; background-position: center; background-repeat: no-repeat;">
  <div style="width: 100%; height: 100%; position: absolute; z-index: -1; transition: cubic-bezier(0.165, 0.84, 0.44, 1);"></div>
</div>
<div class="container p-5 w-50 text-center mt-4" style="background-color: #fef6f3; box-shadow: 0 4px 4px rgba(0, 0, 0, 0.25); " >
  <h1 class="fw-bold fs-2 mb-3" style="color: #38686a;">Create Account</h1>
  <h4 class="fw-normal fs-5 mb-5" style="color: #38686a;">Sign up for a account to get access to all resume templates.</h4>
  <form action="/signup" method="post">
    <input class="form-control mb-3 w-75 m-auto border border-start-0 border-3 rounded-pill p-2" type="text" placeholder="Name" name="name">
    <input class="form-control mb-3 w-75 m-auto border border-start-0 border-3 rounded-pill p-2" type="email" placeholder="Email" name="email">
    <input class="form-control mb-3 w-75 m-auto border border-start-0 border-3 rounded-pill p-2" type="text" placeholder="Username" name="username">
    <input class="form-control mb-3 w-75 m-auto   border border-end-0  border-3 rounded-pill p-2" type="password" placeholder="Password" name="password">
    <button class="btn btn-dark mb-4 w-75 rounded-pill" style="background-color: #38686a;">Sign Up</button>
  </form>
  <p style="color: #38686a;">Already have Account?<a href="/login"> Sign In</a></p>
</div>

 <style>
  button:hover{
	    box-shadow: 0 0 0 2px white, 0 0 0 3px #38686a;
    }
  </style>

