<body style="background-color: #fef6f3;">
  <main>
    <nav>
      <h1><a href="/">ResumeBuilder</a></h1>
      <ul>
        <li style="margin-top: 1vmax;">
          <a href="<%=isLoggedIn?'/profile':'/'%>">
            <%=isLoggedIn?'PROFILE':'HOME'%>
          </a>
        </li>

        <%if(!isLoggedIn){%>
          <li style="margin-top: 1vmax;"><a href="/login">SIGN-IN</a></li>
          <%}else{%>
            <li style="margin-top: 1vmax;"><a href="/show/<%=user._id%>">VIEW</a></li>
            <%}%>
              <li><button><a href="<%=isLoggedIn?'/create':'/signup'%>" style="color: #fef6f3;">
                    <%=isLoggedIn?'CREATE':'SIGN UP'%>
                  </a></button></li>

      </ul>
    </nav>
  </main>