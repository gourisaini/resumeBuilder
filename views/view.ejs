<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%=title%>
    </title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href='https://fonts.googleapis.com/css?family=Oswald:400,700|Lato:400,300' rel='stylesheet' type='text/css'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/view.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2017.1.223/styles/kendo.common.min.css" />
</head>

<body id="top">
    <div id="button" class="no-print">
        <button type="button" class="printbtn"><span class="button-txt"><i class="fa fa-print" aria-hidden="true"></i>
                &nbsp;Download</span></button>
    </div>
    <div class="resume">
    <page size="A4" >
        <div class="cv">
            <div id="header" style="position: relative;">
                <div class="contactDetails">
                    <ul>
                        <li class="icon">
                            <img src="../icons/mail-line.png" alt="">&nbsp;&nbsp;<%=user.email%>
                        </li>
                        <li class="icon">
                            <img src="../icons/phone-line.png" alt="">&nbsp;&nbsp;<%=user.phone%>
                        </li>
                        <li class="icon">
                            <img src="../icons/map-pin-line.png" alt="">&nbsp;&nbsp;<%=user.address%>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="mainDetails">
                <%if(user.avatar !=="dummy.png" ){%>
                    <div id="headshot">
                        <img id="avatar" src="/images/<%= user.avatar%>" alt="">
                    </div>
                    <%}%>

                        <div id="name">
                            <h1>
                                <%=user.name%>
                            </h1>
                        </div>
                        <div class="clear"></div>
            </div>
            <div id="mainArea" style="position: relative;">
                <% if(user.objective === "") { %>
                    <section>
                        <article>
                            <div class="sectionTitle">
                                <h1>Objective</h1>
                            </div>
                            <div class="sectionContent"
                                style="overflow: hidden; width: 65%; height: 20%; position: absolute; left: 30%; top: -10%;">
                                <p>
                                    <%=user.objective%>
                                </p>
                            </div>
                        </article>
                        <div class="clear"></div>
                    </section>
                <% } %>
                <section>
                    <div class="sectionTitle">
                        <h1>Skills</h1>
                    </div>
                    <div class="sectionContent">
                        <ul class="keySkills">
                            <li class="subDetails"></li>
                            <% user.skill.forEach((e, i)=> { %>
                                <li><i class="fa fa-check" aria-hidden="true"></i>&nbsp;<%=e.skills%>
                                </li>
                                <% })%>
                        </ul>
                    </div>
                    <div class="clear"></div>
                </section>
                <section>
                    <div class="sectionTitle">
                        <h1>Education</h1>
                    </div>
                    <div class="sectionContent">
                        <ul class="list">
                            <% user.education.forEach((e, i)=> { %>
                                <li><span class="subDetails">
                                        <%=e.college%>- &nbsp;&nbsp;
                                    </span><span class="bold"></span>
                                    - <%=e.degree%> - <%=e.year%>
                                </li>
                                <% })%>

                        </ul>
                    </div>
                    <div class="clear"></div>
                </section>
                <% if(user.experience.length > 0) { %>
                    <section>
                        <div class="sectionTitle">
                            <h1>Experience</h1>
                        </div>
                        <div class="sectionContent">
                            <ul class="list">
                                <% user.experience.forEach((e, i)=> { %>
    
                                    <li><span class="subDetails">&nbsp;&nbsp;</span>
                                        <%=e.position%> - <%=e.duration%> <br>
                                                <%=e.description%>
                                    </li>
                                    <% })%>
                            </ul>
                        </div>
                        <div class="clear"></div>
                    </section>
                <% } %>
                <% if(user.project.length > 0) { %>
                <section>
                    <div class="sectionTitle">
                        <h1>Project</h1>
                    </div>
                    <div class="sectionContent">
                        <ul class="list">
                            <% user.project.forEach((e, i)=> { %>
                                <li><span class="subDetails">
                                        <%=e.title%> - &nbsp;&nbsp;
                                    </span><span class="bold"></span>
                                    - (<%=e.technology%>), <%=e.description%>
                                </li>
                                <% })%>

                        </ul>
                    </div>
                    <div class="clear"></div>
                </section>
                <% } %>
                <section>
                    <div class="sectionTitle">
                        <h1>Links</h1>
                    </div>
                    <div class="sectionContent">
                        <ul class="list">
                            <li><span class="subDetails"><i class="ri-linkedin-line"></i></span><span
                                    class="bold"></span>&nbsp;&nbsp; - <%=user.linkedin%>
                            </li>
                            <li><span class="subDetails"><i class="ri-github-line"></i></span><span
                                    class="bold"></span>&nbsp;&nbsp; - <%=user.github%>
                            </li>
                        </ul>
                    </div>
                    <div class="clear"></div>
                </section>

                <section>
                    <div class="sectionTitle">
                        <h1>Personal Details</h1>
                    </div>
                    <div class="sectionContent">
                        <ul class="list">
                            <li><span class="subDetails">Date Of Birth - &nbsp;&nbsp;</span><span class="bold"></span> -
                                <%=user.dob%>
                            </li>
                            <li><span class="subDetails">Language &nbsp;&nbsp;</span><span class="bold"></span> -
                                <%=user.lang%>
                            </li>
                            <li><span class="subDetails">Hobbies &nbsp;&nbsp;</span><span class="bold"></span> -
                                <%=user.hobby%>
                            </li>
                        </ul>
                    </div>
                    <div class="clear"></div>
                </section>
            </div>
        </div>
    </page>
            
</div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2017.1.223/js/jszip.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2017.1.223/js/kendo.all.min.js"></script>

    <script type="text/javascript">
        function getPDF(selector) {
            kendo.drawing.drawDOM($(selector)).then(function (group) {
                kendo.drawing.pdf.saveAs(group, "testing.pdf");
            });
        }
        $(".printbtn").click(function () {
            getPDF(".resume");
        });
    // function myFunction() {
    // window.print();
    // }
    </script>
</body>

</html>